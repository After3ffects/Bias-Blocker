{
  "manifest_version": 3,
  "name": "BiasBlocker",
  "version": "1.0",
  "description": "BiasBlocker scans news articles in real time, highlighting phrases that may be biased, and directs you towards unbiased sources.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "biasblockerlogo.png",
      "32": "biasblockerlogo.png",
      "48": "biasblockerlogo.png",
      "128": "biasblockerlogo.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://biasbuster.onrender.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bbc.com/*",
        "*://bbc.com/*",
        "*://*.nytimes.com/*",
        "*://nytimes.com/*",
        "*://*.washingtonpost.com/*",
        "*://washingtonpost.com/*",
        "*://*.theguardian.com/*",
        "*://theguardian.com/*",
        "*://*.reuters.com/*",
        "*://reuters.com/*",
        "*://*.wsj.com/*",
        "*://wsj.com/*",
        "*://*.bloomberg.com/*",
        "*://bloomberg.com/*",
        "*://*.cnn.com/*",
        "*://cnn.com/*",
        "*://*.foxnews.com/*",
        "*://foxnews.com/*",
        "*://*.npr.org/*",
        "*://npr.org/*",
        "*://*.usatoday.com/*",
        "*://usatoday.com/*",
        "*://*.cbsnews.com/*",
        "*://cbsnews.com/*",
        "*://*.nbcnews.com/*",
        "*://nbcnews.com/*",
        "*://*.abcnews.go.com/*",
        "*://abcnews.go.com/*",
        "*://*.cnbc.com/*",
        "*://cnbc.com/*",
        "*://*.economist.com/*",
        "*://economist.com/*",
        "*://*.aljazeera.com/*",
        "*://aljazeera.com/*",
        "*://*.theatlantic.com/*",
        "*://theatlantic.com/*",
        "*://*.politico.com/*",
        "*://politico.com/*",
        "*://*.thehill.com/*",
        "*://thehill.com/*",
        "*://*.vox.com/*",
        "*://vox.com/*",
        "*://*.breitbart.com/*",
        "*://breitbart.com/*",
        "*://*.huffpost.com/*",
        "*://huffpost.com/*",
        "*://*.dailywire.com/*",
        "*://dailywire.com/*",
        "*://*.theintercept.com/*",
        "*://theintercept.com/*",
        "*://*.ft.com/*",
        "*://ft.com/*",
        "*://*.newyorker.com/*",
        "*://newyorker.com/*",
        "*://*.thedailybeast.com/*",
        "*://thedailybeast.com/*",
        "*://*.newsmax.com/*",
        "*://newsmax.com/*",
        "*://*.csmonitor.com/*",
        "*://csmonitor.com/*",
        "*://*.theepochtimes.com/*",
        "*://theepochtimes.com/*",
        "*://*.motherjones.com/*",
        "*://motherjones.com/*",
        "*://*.dailymail.co.uk/*",
        "*://dailymail.co.uk/*",
        "*://*.slate.com/*",
        "*://slate.com/*",
        "*://*.independent.co.uk/*",
        "*://independent.co.uk/*",
        "*://*.nationalreview.com/*",
        "*://nationalreview.com/*",
        "*://*.thenation.com/*",
        "*://thenation.com/*",
        "*://*.spectator.co.uk/*",
        "*://spectator.co.uk/*",
        "*://*.propublica.org/*",
        "*://propublica.org/*",
        "*://*.dailycaller.com/*",
        "*://dailycaller.com/*",
        "*://*.jacobinmag.com/*",
        "*://jacobinmag.com/*",
        "*://*.thefederalist.com/*",
        "*://thefederalist.com/*",
        "*://*.reason.com/*",
        "*://reason.com/*",
        "*://*.newrepublic.com/*",
        "*://newrepublic.com/*",
        "*://*.theamericanconservative.com/*",
        "*://theamericanconservative.com/*",
        "*://*.foreignpolicy.com/*",
        "*://foreignpolicy.com/*",
        "*://*.thediplomat.com/*",
        "*://thediplomat.com/*",
        "*://*.spiegel.de/*",
        "*://spiegel.de/*",
        "*://*.lemonde.fr/*",
        "*://lemonde.fr/*",
        "*://*.straitstimes.com/*",
        "*://straitstimes.com/*",
        "*://instagram.com/*"
      ],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/*.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}